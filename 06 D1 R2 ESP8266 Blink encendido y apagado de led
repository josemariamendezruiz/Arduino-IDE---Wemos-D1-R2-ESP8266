int pin = D1; // Pin por el que vamos a controlar el encedido y apagado del led


void setup() {
  pinMode(pin, OUTPUT); 
}

void loop() {
  digitalWrite (pin,HIGH);
  delay (1000);
  digitalWrite (pin,LOW);
  delay (1000);
}
